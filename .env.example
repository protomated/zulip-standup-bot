# Copy this to .env and fill in your actual values

# Zulip Bot Configuration (Required)
ZULIP_EMAIL=your-bot@your-zulip.com
ZULIP_API_KEY=your_zulip_api_key_here
ZULIP_SITE=https://your-zulip.com

# AI Configuration (Optional but recommended)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant

# Database Configuration (Optional - will use defaults if not set)
SQLITE_DB_PATH=/app/data/standup.db

# Bot Behavior (Optional - will use defaults if not set)
DEFAULT_TIMEZONE=America/New_York
DEFAULT_PROMPT_TIME=09:30
DEFAULT_CUTOFF_TIME=12:45
DEFAULT_REMINDER_TIME=11:45
LOG_LEVEL=INFO
